  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "start",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "bundle generation complete"
          }
        }
      }
    },
    {
      "type": "npm",
      "script": "test",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "bundle generation complete"
          }
        }
      }
    },
    {
      "type": "npm",
      "script": "build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [],
      "label": "npm: build",
      "detail": "ng build"
    },
    {
      "type": "npm",
      "script": "http-server",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "^.*Starting up http-server.*"
          },
          "endsPattern": {
            "regexp": "^.*Hit CTRL-C to stop the server.*"
          }
        }
      },
      "label": "npm: http-server",
      "detail": "http-server -p 8080 -c-1 dist/app/browser"
    },
    {
      "label": "python: generate-free-agents",
      "type": "shell",
      "command": "'${command:python.interpreterPath}' 'scripts/generate_free_agents.py' > '${workspaceFolder}/src/assets/free-agents.json'"
    }
  ]
}
